# ─── Docker Compose Environment ──────────────────────────────────
# Copy this to .env and fill in ALL values before running:
#   cp .env.docker.example .env
#   # Edit .env with real values
#   docker compose up -d

# ── Database (REQUIRED) ─────────────────────────────────────────
POSTGRES_DB=soltip
POSTGRES_USER=soltip
POSTGRES_PASSWORD=           # REQUIRED: Set a strong password
DB_MAX_CONNECTIONS=10

# ── Solana / Program (REQUIRED) ────────────────────────────────
SOLANA_RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=                  # REQUIRED: Your deployed program ID
PLATFORM_AUTHORITY=

# ── Backend (REQUIRED) ──────────────────────────────────────────
BACKEND_PORT=8080
JWT_SECRET=                  # REQUIRED: Generate with `openssl rand -hex 32`
CORS_ORIGINS=                # REQUIRED: e.g., https://yourdomain.com
AUTH_TOKEN_MAX_AGE_SECS=300
WEBHOOK_TIMEOUT_SECS=10
WEBHOOK_MAX_RETRIES=3
COINGECKO_API_KEY=
PRICE_CACHE_TTL_SECS=300
RUST_LOG=info

# ── Frontend (build-time) ───────────────────────────────────────
FRONTEND_PORT=80
VITE_SOLANA_NETWORK=devnet
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
VITE_PROGRAM_ID=             # Same as PROGRAM_ID above
VITE_API_URL=http://localhost:8080
VITE_FEATURE_POLLS=true
VITE_FEATURE_CONTENT_GATES=true
VITE_FEATURE_REFERRALS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_WIDGET=true
